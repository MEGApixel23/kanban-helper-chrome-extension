{
    "name": "Asana ticket copy",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Copies Asana ticket description + URL into the clipboard",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "browser_action": {
      "default_title": "Asana ticket copy",
      "default_popup": "popup.html"
    },
    "default_locale": "en",
    "background": {
      "scripts": [
        "js/background.js"
      ],
      "persistent": true
    },
    "permissions": [
      "https://app.asana.com/*",
      "activeTab"
    ],
    "content_security_policy": "default-src 'self';",
    "content_scripts": [
      {
        "matches": [
          "https://app.asana.com/*"
        ],
        "js": [
          "js/content.js"
        ]
      }
    ]
  }

